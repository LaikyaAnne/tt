#include <stdio.h>
#include <ctype.h>
#include <string.h>

int isPangram(char str[]) {
    int alphabet[26] = {0};  
    int i;

    for (i = 0; str[i] != '\0'; i++) {
        if (isalpha(str[i])) {
            char ch = tolower(str[i]);  
            alphabet[ch - 'a'] = 1;     
        }
    }

    for (i = 0; i < 26; i++) {
        if (alphabet[i] == 0)
            return 0;  // Missing a letter
    }

    return 1;  // All letters found
}

int main() {
    char str[200];

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    if (isPangram(str))
        printf("The given string is a Pangram.\n");
    else
        printf("The given string is NOT a Pangram.\n");

    return 0;
}
