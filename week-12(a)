#include <stdio.h>

#ifndef MULTIPLY_H
#define MULTIPLY_H

extern int multiplier;          // shared variable declaration
int multiply(int a);            // function declaration

#endif


int multiplier = 5;             // definition of shared variable

int multiply(int a) {
    return a * multiplier;
}


int main() {
    int value = 10;
    
    printf("Multiplying %d by multiplier %d gives: %d\n", value, multiplier, multiply(value));
    
    // Change multiplier and try again
    multiplier = 3;
    printf("Multiplying %d by multiplier %d gives: %d\n", value, multiplier, multiply(value));
    
    return 0;
}
