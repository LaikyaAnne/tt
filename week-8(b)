#include <stdio.h>

// Function to calculate average of array elements
float average(int *arr, int size) {
    int sum = 0;

    for (int i = 0; i < size; i++) {
        sum += *(arr + i);  // Access elements using pointer arithmetic
    }

    return (float)sum / size;  // Cast to float for decimal result
}

int main() {
    int arr[] = {15, 25, 35, 45, 55};
    int size = sizeof(arr) / sizeof(arr[0]);

    float avg = average(arr, size);

    printf("Average of array elements: %.2f\n", avg);

    return 0;
}
